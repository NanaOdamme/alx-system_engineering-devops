#!/usr/bin/env bash
# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Nginx is not installed. Please install it first."
    exit 1
fi

# Backup Nginx default configuration
sudo cp /etc/nginx/sites-enabled/default /etc/nginx/sites-enabled/default_backup

# Configure Nginx to listen on port 80
sudo sed -i "s/8080/80/" /etc/nginx/sites-enabled/default

# Restart Nginx
sudo service nginx restart

echo "Nginx has been configured to listen on port 80."
